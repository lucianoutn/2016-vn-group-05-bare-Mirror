		<h1>Puntos de Interes</h1>
		<form action="/terminal/show" >
		  <div class="row">
			  <div class="col-md-10">
				  <input type="text" class="form-control" name="criterio">
				</div>
				<div class="col-md-2">
				  <input type="submit" class="form-control btn btn-default">
				</div>
		  </div>
		</form>

		<h1>Puntos de Interes</h1>
		
		
		
		<div class="row">
			<div class="col-md-12">	
			<table class="table table-striped" >
				<td>Id</td>
				<td>Nombre</td>
				<td>Calle</td>
				<td>Altura</td>
				<td>Comuna</td>
				<td>Rubro </td>
				<td>Nombre</td>
				<td>Linea</td>
				</hr>
			{{#todosLosPois}}
				<tr>
					<td>{{id_Poi}}</td>
					<td>{{nombrePoi}}</td>
					<td>{{calle}}</td>
					<td>{{altura}}</td>
					<td>{{comuna.nroComuna}}</td>
					<td>{{rubro}}</td>
					<td>{{nombre}}</td>
					<td>{{numeroDeLinea}}</td>
				</tr>
			{{/todosLosPois}}				
			</table>
			</div>
		</div>
		
		<h1>Historial de Busquedas</h1>
		<div class="row">
			<div class="col-md-12">	
			<table class="table table-striped" >
				<td>Cantidad De Busquedas</td>
				<td>Dia de Busqueda</td>
				<td>Terminal</td>
				<td>Cantidad de Resultados</td>
				<td>Frase buscada</td>
				<td>Demora </td>
				<td>Cantidad de Resultados</td>
				</hr>
			{{#todasLasBusquedas}}
				<tr>
					<td>{{cantidadDeBusquedas}}</td>
					<td>{{diaDeLaBusqueda}}</td>
					<td>{{unaTerminal.nombreDeTerminal}}</td>
					<td>{{cantResultados}}</td>
					<td>{{fraseBuscada}}</td>
					<td>{{demoraDeBusqueda}}</td>
					<td>{{cantidadDeResultados}}</td>
				</tr>
			{{/todasLasBusquedas}}				
			</table>
			</div>
		</div>
		
		
